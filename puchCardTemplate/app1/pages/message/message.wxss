.page-warp {
    background: #eee;
    position: relative;
    padding: 20rpx;
}

.scroll-view-item {
    position: relative;
    background-color: #fff;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #eee;
}

.scroll-view-item .red-dot {
    position: absolute;
    right: 15rpx;
    top: 18rpx;
    background: #ee5954;
    width: 14rpx;
    height: 14rpx;
    border-radius: 14rpx;
}

.item-day {
    display: flex;
}

.item-day .item-habit {
    flex: 1;
    line-height: 50rpx;
    color: #333;
    font-size: 30rpx;
}

.item-habit>view:last-child {
    color: #adb2bb;
    font-size: 26rpx;
    margin-top: 4rpx;
    line-height: 40rpx;
}

.item-pv {
    height: 80rpx;
    line-height: 80rpx;
    color: #c2c2c2;
    font-size: 32rpx;
}

.item-day .item-icon {
    margin-top: 8rpx;
    width: 84rpx;
    height: 84rpx;
    border-radius: 42rpx;
    margin-right: 30rpx;
}

.loadmore {
    width: 100%;
    height: 74rpx;
    line-height: 70rpx;
    text-align: center;
}

.loadmore>text {
    font-size: 23rpx;
    color: #a2a2a2;
}

.empty-warp {
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #999;
    padding-top: 200rpx;
}
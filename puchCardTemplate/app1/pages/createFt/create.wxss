.create-warp {
    padding-bottom: 30rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.create-title {
    padding-top: 45rpx;
    color: #666;
    font-weight: bold;
    font-size: 30rpx;
    padding-bottom: 30rpx;
}

.new-create {
    width: auto;
    background: #fff;
    align-items: center;
    border-radius: 10rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-top: 24rpx;
    padding-bottom: 24rpx;
    color: #666;
    font-size: 28rpx;
}

.new-rule {
    width: auto;
    background: #fff;
    align-items: center;
    border-radius: 10rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    height: 140rpx;
}

.create-desc {
    padding-left: 6rpx;
    color: #666;
    font-size: 26rpx;
    line-height: 40rpx;
}

.desc-warp {
    margin-top: 5rpx;
    padding-left: 3rpx;
    display: flex;
    flex-direction: row;
}

.checked-icon {
    margin-top: 5rpx;
    width: 30rpx;
    height: 30rpx;
}

radio .wx-radio-input {
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
}

radio .wx-radio-input.wx-radio-input-checked {
    border: #1f82d2;
    border-radius: 50%;
    width: 40rpx;
    height: 40rpx;
}

radio .wx-radio-input.wx-radio-input-checked::before {
    border-radius: 50%;
    width: 28rpx;
    height: 28rpx;
    line-height: 28rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%,-50%) scale(1);
}

.create-btn {
    margin-top: 62rpx;
    width: 60%;
    background: #1f82d2;
    margin-left: auto;
    margin-right: auto;
    border-radius: 8rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
}

.back-home-btn {
    position: fixed;
    width: 110rpx;
    bottom: 40rpx;
    left: 0rpx;
    text-align: center;
    line-height: 70rpx;
    background: #fbc955;
    border-top-right-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
    font-size: 26rpx;
    color: #fff;
    z-index: 100;
}

.direct-web {
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    line-height: 60rpx;
    color: #29a1f7;
    position: fixed;
    bottom: 20rpx;
}

.welfare {
    width: 550rpx;
    margin-top: 78rpx;
    margin-left: 80rpx;
}